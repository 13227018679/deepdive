#!/usr/bin/env bash
# stop-container -- Stops the running Docker container
##
set -euo pipefail
. "$(dirname "$0")"/config.bash

# Check if there's already a running container
containerRunning=$(docker ps -aqlf Name="$DOCKER_CONTAINER")
[[ -n $containerRunning ]] || {
    warning 'DOCKER_CONTAINER='"$DOCKER_CONTAINER"' already stopped'
    exit 0
}

set -x

# Remove the container with the same name
docker rm -f "$DOCKER_CONTAINER"
