#!/usr/bin/env bash
# compile-config-0.01-add_initdb -- Adds an extractor for initialzing database
##
exec jq '.deepdive_ as $deepdive |

# add a database initialization extractor
.deepdive_.extraction.extractors +=
    { "init/db": { style: "cmd_extractor"
                 , cmd: "deepdive initdb"
                 }
    }

# TODO connect all extractors and factors with no dependency to init/db

' "$@"
